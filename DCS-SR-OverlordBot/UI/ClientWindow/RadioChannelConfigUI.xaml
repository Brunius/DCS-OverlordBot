<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.RadioChannelConfigUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Name="RadioChannelConfig"
             d:DesignHeight="50"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <Grid>
        <ComboBox Name="ChannelSelector"
                  Grid.Row="1"
                  Grid.Column="1"
                  SelectedValuePath="Content">
            <ComboBoxItem>Left</ComboBoxItem>
            <ComboBoxItem>Right</ComboBoxItem>
            <ComboBoxItem>Both</ComboBoxItem>
        </ComboBox>


    </Grid>
</UserControl>